<% layout('layout/layout') -%>

<div class="container-fluid">
  <div class="content">
    <div class="row">
        <div class="col-lg-12">
          <table border="1">
            <tr>
              <td>no</td>
              <td>id lapang</td>
              <td>nama</td>
              <td>aktif</td>
              <td>action</td>
            </tr>

            <%
               for(var i = 0;i < data.length;i++) { %>

             <tr>
                <td><%=(i+1)%></td>
                <td><%=data[i].id_lapang%></td>
                <td><%=data[i].nama%></td>
                <td><%=data[i].aktif%></td>
                <td>
                  <a class="btn btn-warning" href="../sifut/lapang/edit/<%=data[i].id_lapang%>">Ubah</a>
                  <a class="btn btn-warning" href="../sifut/lapang/hapus/<%=data[i].id_lapang%>">hapus</a>

                </td>
            </tr>
            <% } %>


          </table>
          <button type="button" data-toggle="modal" data-target="#myModal">
            tambah
          </button>
        </div>
    </div>
  </div>
</div>

<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Tambah data</h4>
      </div>
      <div class="modal-body">

        <form class="form-horizontal" role="form" method="post" action="/sifut/lapang/tambah">
          <div class="form-group">
            <label for="nama" class="col-sm-2 control-label">id lapang</label>
            <div class="col-sm-10">
              <input type="text" name="id" class="form-control" placeholder="id lapang">
            </div>
          </div>
          <div class="form-group">
            <label for="email" class="col-sm-2 control-label">nama</label>
            <div class="col-sm-10">
              <input type="text" name="nama" class="form-control"  placeholder="nama">
            </div>
          </div>
          <div class="form-group">
            <label for="pesan" class="col-sm-2 control-label">aktif</label>
            <div class="col-sm-10">
              <input type="text" name="aktif" class="form-control"  placeholder="aktif">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Save">
            </div>
          </div>

        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
